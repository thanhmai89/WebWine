
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng nhập Admin</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/core-img/favicon.JPG" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100" style="background-image: url('../../images/bg-img/22.jpg');">
            <div class="wrap-login100">
                <div class="login100-form-title" style="background-image: url('../../images/bg-img/1.jpg');">
                    <span style="font-family:Arial; font-weight:bold" class="login100-form-title-1">
                        Đăng nhập
                    </span>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <div class="login100-form validate-form">
                        <div class="wrap-input100 validate-input m-b-26" data-validate="Username is required">
                            <span style="font-family:Arial; width:140px; text-align:left; left:-120px; font-size:14px" class="label-input100">Tên đăng nhập</span>
                            <input style="font-family:Arial; width:370px; font-size:14px" class="input100" type="text" name="username" placeholder="Nhập vào tên đăng nhập" required>
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-18" data-validate="Password is required">
                            <span style="font-family:Arial; width:140px; text-align:left; left:-120px; font-size:14px" class="label-input100">Mật khẩu</span>
                            <input style="font-family:Arial; width:370px; font-size:14px" class="input100" type="password" name="password" placeholder="Nhập vào mật khẩu" required>
                            <span class="focus-input100"></span>
                        </div>

                        <div class="flex-sb-m w-full p-b-30">
                            <div class="contact100-form-checkbox">
                                <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                                <label style="font-family:Arial; font-size:14px" class="label-checkbox100" for="ckb1">
                                    Nhớ mật khẩu
                                </label>
                            </div>

                            <div>
                                <a style="font-family:Arial; font-size:14px" href="#" class="txt1">
                                    Quên mật khẩu?
                                </a>
                            </div>
                        </div>

                        <div class="container-login100-form-btn">
                            <button style="font-family:Arial; font-weight:bold; font-size:16px; background-color:dimgrey" class="login100-form-btn">
                                Đăng nhập
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Content/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/main.js"></script>

</body>
</html>
