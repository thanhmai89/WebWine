@using WebWine.Models
@using PagedList.Mvc;
@model PagedList.PagedList<WebWine.Models.KhachHang>

@{
    ViewBag.Title = "KhachHang";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Breadcrumb Area Start -->
<section class="breadcrumb-area bg-img bg-gradient-overlay jarallax" style="background-image: url('../../images/bg-img/37.jpg');">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2 class="page-title">Quản lý thông tin khách hàng</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("KhachHang", "Admin")">Khách hàng</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Quản lý thông tin</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->
<!-- Our Schedule Area Start -->
<section class="our-schedule-area bg-white section-padding-100">
    <div class="container">
        <div class="row">
            <!-- Heading -->
            <div class="col-12">
                <div class="section-heading text-center wow fadeInUp" data-wow-delay="300ms">
                    <p style="font-family:Arial; color:black">Khách hàng</p>
                    <h4 style="font-family:Arial; color:black">THÔNG TIN KHÁCH HÀNG</h4>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <!-- Tab Content -->
                <div class="tab-content" id="conferScheduleTabContent">
                    <div class="tab-pane fade show active" id="step-one" role="tabpanel" aria-labelledby="monday-tab">
                        <!-- Single Tab Content -->
                        <div class="single-tab-content">
                            <div style="margin-right:-45px; margin-left:-45px" class="row">
                                <div class="col-12">
                                    <table class="table table-striped custab table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center; width:160px">Tên khách hàng</th>
                                                <th style="text-align:center">Ngày sinh</th>
                                                <th style="text-align:center; width:100px">Giới tính</th>
                                                <th style="text-align:center">Email</th>
                                                <th style="text-align:center; width:280px">Địa chỉ</th>
                                                <th style="text-align:center">Điện thoại</th>
                                                <th style="text-align:center">Tùy chọn</th>
                                            </tr>
                                        </thead>
                                        @foreach (var item in Model)
                                        {
                                            <tr style="text-align:center">
                                                <td>@Html.DisplayFor(modelItem => item.TenKH)</td>
                                                <td>@String.Format("{0:dd/MM/yyyy}", item.Ngaysinh)</td>
                                                <td>@Html.DisplayFor(modelItem => item.Gioitinh)</td>
                                                <td>@Html.DisplayFor(modelItem => item.EmailKH)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DiachiKH)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DienthoaiKH)</td>
                                                <td style="text-align:center">
                                                    @Html.ActionLink("Sửa", "SuaKH", new { id = item.MaKH }) |
                                                    @Html.ActionLink("Chi tiết", "ChiTietKH", new { id = item.MaKH }) |
                                                    @Html.ActionLink("Xóa", "XoaKH", new { id = item.MaKH })
                                                </td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="page-no">
            <ul>
                <li>@Html.PagedListPager(Model, page => Url.Action("KhachHang", new { page = page }))</li>
            </ul>
        </div>
        <style>
            .page-no {
                float: right;
                padding-top: 5px;
            }

                .page-no ul {
                    display: inline;
                }

                .page-no li {
                    display: inline;
                }

                    .page-no li a {
                        font-size: 0.8125em;
                        color: black;
                        line-height: 1.6em;
                        font-family: verdana, arial, helvetica, helve, sans-serif;
                        padding: 5px 5px;
                        border: 1px solid;
                    }

                        .page-no li a:hover, .page-no li.active {
                            color: #602D8D;
                            text-decoration: underline;
                        }
        </style>
    </div>
</section>
<!-- Our Schedule Area End -->
