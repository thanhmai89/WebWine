@using WebWine.Models
@model List<GioHang>

@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<!-- Breadcrumb Area Start -->
<section class="breadcrumb-area bg-img bg-gradient-overlay jarallax" style="background-image: url('../../images/bg-img/37.jpg');">
    <div class="container h-100">
        <div class="row h-100 align-items-center">
            <div class="col-12">
                <div class="breadcrumb-content">
                    <h2 class="page-title">Thông tin giỏ hàng</h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("GioHang", "GioHang")">Giỏ hàng</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Thông tin giỏ hàng</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Area End -->
<!-- Our Schedule Area Start -->
<section class="our-schedule-area bg-white section-padding-100">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <!-- Tab Content -->
                <div class="tab-content" id="conferScheduleTabContent">
                    <div class="tab-pane fade show active" id="step-one" role="tabpanel" aria-labelledby="monday-tab">
                        <!-- Single Tab Content -->
                        <div class="single-tab-content">
                            <div class="row">
                                <div class="col-12">
                                    <table class="table table-striped custab table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="text-align:center">Mã rượu</th>
                                                <th style="text-align:center">Tên rượu</th>
                                                <th style="text-align:center" width="250px">Ảnh bìa</th>
                                                <th style="text-align:center">Số lượng</th>
                                                <th style="text-align:center">Đơn giá</th>
                                                <th style="text-align:center">Thành tiền</th>
                                                <th style="text-align:center">Tùy chọn</th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>
                                        @foreach (var item in Model)
                                        {
                                            <tr style="text-align:center">
                                                <td style="width:100px">@item.iMaSP</td>
                                                <td style="width:150px">@item.sRuou1</td>
                                                <td><img style="width:190px; height:250px" src="~/images/bg-img/@item.sAnhbia" /></td>
                                                @using (Html.BeginForm("CapnhatGiohang", "GioHang", new { @iMaSp = item.iMaSP}))
                                                {
                                                    <td>
                                                        <input style="width:100px" type="number" name="txtSoluong" value="@item.iSoluong"/>
                                                    </td>
                                                    <td>@String.Format("{0:0,0}", item.dDongia)</td>
                                                    <td>@String.Format("{0:0,0}", item.dThanhtien)</td>
                                                    <td><a style="font-family:Arial" href="@Url.Action("Details", "Ruou", new { id = item.iMaSP })">Chi tiết</a></td>
                                                    <td style="font-family:Arial">@Html.ActionLink("Xóa", "XoaGiohang", new { @iMaSp = item.iMaSP })</td>
                                                    <td><input type="submit" value="Cập nhật"/></td>
                                                }
                                            </tr>
                                        }
                                        <tr>
                                            <td colspan="4" align="right">Số lượng rượu đã chọn: @ViewBag.Tongsoluong</td>
                                            <td colspan="5" align="right">Tổng tiền: @String.Format("{0:0,0}", ViewBag.Tongtien) VND</td>
                                        </tr>
                                        <tr>
                                            <td colspan="9" align="right" style="font-family:Arial">
                                                @Html.ActionLink("Xóa giỏ hàng", "XoaTatcaGiohang")
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="9" align="center" style="font-family:Arial; font-size:20px">
                                                @Html.ActionLink("ĐẶT HÀNG", "DatHang", "GioHang")
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Our Schedule Area End -->
